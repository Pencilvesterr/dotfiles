[user]
	name = Morgan Crouch
{{- if .isWork }}
	email = mcrouch@atlassian.com
{{- else }}
	email = m8crouch@gmail.com
{{- end }}
[push]
	autoSetupRemote = true
[core]
	autocrlf = input
{{- if .isWork }}
	excludesfile = /Users/mcrouch/.gitignore_global
[merge]
	conflictStyle = zdiff3
[difftool]
# Run the difftool immediately, don't ask 'are you sure' each time.
prompt = false

[pager]
# Use a pager if the difftool output is larger than one screenful,
# consistent with the behaviour of `git diff`.
difftool = true

[diff]
# Set difftastic as the default difftool, so we don't need to specify
# `-t difftastic` every time.
tool = difftastic
[trace2]
	eventTarget = af_unix:/Users/mcrouch/.gittrace/trace.sock
	eventBrief = true
	eventNesting = 1
	configparams = custom.metacommands
{{- end }}
[pull]
	rebase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[include]
	path = ~/.config/difftastic/difft.gitconfig
[rerere]
	enabled = true
{{- if .isWork }}
[githooks]
	installDir = /Users/mcrouch/.githooks
	runner = /Users/mcrouch/.githooks/release/base-template.sh
	cloneUrl = https://github.com/rycus86/githooks.git
	cloneBranch = master
[alias]
	hooks = !"/Users/mcrouch/.githooks/bin/githooks"
[githooks "autoupdate"]
	enabled = true
{{- end }}
